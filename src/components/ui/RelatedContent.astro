---
import ContentCard from './ContentCard.astro';

interface RelatedItem {
  href: string;
  title: string;
  description: string;
  category: string;
  petSafe?: boolean;
  difficulty?: string;
}

interface Props {
  items: RelatedItem[];
  title?: string;
}

const { items, title = 'Related Plants' } = Astro.props;
---

{items.length > 0 && (
  <section class="mt-12 pt-8 border-t border-dark-surface/60">
    <h2 class="text-xl font-bold text-dark-text mb-6">{title}</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      {items.map((item) => (
        <ContentCard
          href={item.href}
          title={item.title}
          description={item.description}
          category={item.category}
          petSafe={item.petSafe}
          difficulty={item.difficulty}
        />
      ))}
    </div>
  </section>
)}
