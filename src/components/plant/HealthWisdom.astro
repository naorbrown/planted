---
interface Props {
  wisdom?: {
    tcm?: string;
    ayurveda?: string;
    modernScience?: string;
    folklore?: string;
  };
}

const { wisdom } = Astro.props;
if (!wisdom) return;

const sections = [
  { key: 'tcm', label: 'Traditional Chinese Medicine', icon: 'ðŸ®', content: wisdom.tcm },
  { key: 'ayurveda', label: 'Ayurveda', icon: 'ðŸª·', content: wisdom.ayurveda },
  { key: 'modernScience', label: 'Modern Science', icon: 'ðŸ”¬', content: wisdom.modernScience },
  { key: 'folklore', label: 'Folk Traditions', icon: 'ðŸ“œ', content: wisdom.folklore },
].filter(s => s.content);

