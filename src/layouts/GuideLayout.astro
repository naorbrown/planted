---
import PageLayout from './PageLayout.astro';
import Breadcrumb from '../components/ui/Breadcrumb.astro';

interface Props {
  guide: {
    id: string;
    data: {
      title: string;
      description: string;
    };
  };
}

const { guide } = Astro.props;
const { title, description } = guide.data;

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Guides', href: '/guides/' },
  { label: title },
];
---

<PageLayout title={title} description={description}>
  <article class="max-w-3xl mx-auto px-4 sm:px-6 py-8 sm:py-12" data-pagefind-body>
    <Breadcrumb items={breadcrumbs} />

    <div class="mt-4 mb-8">
      <h1 class="text-2xl sm:text-3xl font-bold text-dark-text mb-2">{title}</h1>
      <p class="text-dark-text/70">{description}</p>
    </div>

    <div class="prose prose-invert max-w-none">
      <slot />
    </div>
  </article>
</PageLayout>
