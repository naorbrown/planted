---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/global/Header.astro';
import Footer from '../components/global/Footer.astro';
import MobileMenu from '../components/global/MobileMenu.astro';
import SearchOverlay from '../components/ui/SearchOverlay.astro';
import '../styles/global.css';
import '../styles/print.css';

interface Props {
  title: string;
  description?: string;
  ogType?: 'website' | 'article';
  ogImage?: string;
}

const { title, description, ogType, ogImage } = Astro.props;
---

<BaseLayout title={title} description={description} ogType={ogType} ogImage={ogImage}>
  <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:bg-leaf focus:text-white focus:px-4 focus:py-2 focus:rounded">
    Skip to content
  </a>
  <Header />
  <main id="main-content" class="flex-1">
    <slot />
  </main>
  <Footer />
  <SearchOverlay />
  <MobileMenu />
</BaseLayout>
